{
   "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "rootDir": "./",
      "resolveJsonModule": true,
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
   },
   "include": [
      "src",
      "package.json"
   ],
   "exclude": [
      "src/**/*.test.ts"
   ]
 }
 